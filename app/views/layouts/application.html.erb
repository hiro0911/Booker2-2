<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<% if user_signed_in? %>
<header class="navbar navbar-fixed-top navbar-inverse" style="height: 50px; margin-bottom: 20px; display: block;">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home home"  %></li>
          <li><%= link_to "Users", users_path, class: "glyphicon glyphicon-user users" %></li>
          <li><%= link_to "books", books_path, class: "glyphicon glyphicon-book books" %></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
      </ul>
    </nav>
  </div>
</header>

<% else %>
    <header class="navbar navbar-fixed-top navbar-inverse" style="height: 50px; margin-bottom: 20px; display: block;">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path, class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to "About", home_about_path, class: "glyphicon glyphicon-link about" %></li>
          <li><%= link_to "sign up", "/users/sign_up", class: "glyphicon glyphicon-edit sign_up"%></li>
          <li><%= link_to "login", "/users/sign_in", class: "glyphicon glyphicon-log-in sign_in" %></li>
      </ul>
    </nav>
  </div>
</header>
<% end %>
<div style="margin-top: 70px; ">
  <% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-error"><%= alert %></p>
<% end %>
    <%= yield %>

</div>

    <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </body>
</html>
